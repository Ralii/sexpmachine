{:paths ["src" "test"]
 :deps {rewrite-clj/rewrite-clj {:mvn/version "1.1.47"}}
 :tasks {test {:doc "Run tests"
               :requires ([clojure.test :as t]
                          [sexpmachine.core-test])
               :task (let [result (t/run-tests 'sexpmachine.core-test)]
                       (when (or (pos? (:fail result))
                                 (pos? (:error result)))
                         (System/exit 1)))}}}
